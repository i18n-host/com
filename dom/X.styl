dialog.Box > a.X
  background var(--svgX) 0 0 / cover no-repeat
  border 2px solid transparent
  border-radius 50%
  bottom -60px
  cursor pointer
  display flex
  filter invert(100%)
  height 1.5em
  left 50%
  margin-left -1em
  position absolute
  width 1.5em
  z-index 2

  &:hover
    background-image var(--svgXs)
    border-color #000
    font-weight bold
